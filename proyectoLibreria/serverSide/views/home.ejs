<body class="container">

    <div class="row">
        <h3>Lista de Libros:</h1>

            <div class="list-group">

                <%libros.forEach(libro => {%>

                    <a href="cargarForm(<%libro.id%>)" class="list-group-item list-group-item-action flex-column align-items-start">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">
                                <%=libro.nombre%>
                            </h5>
                            <small>$
                                <%=libro.precio%>
                            </small>
                        </div>
                        <p class="mb-1">
                            Resumen:
                            <%=libro.resumen%>
                        </p>
                        <small>
                            Autor:
                            <%=libro.autor%>
                        </small>
                    </a>

                    <% }); %>
            </div>

    </div>

    <div class="row">
        <h3>Formulario Libros:</h1>
            <form action="/libros" method="POST">
                <div class="form-group">
                    <label for="nombre">Nombre</label>
                    <input type="text" class="form-control" id="nombre" placeholder="nombre" name="nombre">
                </div>
                <div class="form-group">
                    <label for="resumen">Resumen</label>
                    <input type="text" class="form-control" id="resumen" placeholder="resumen" name="resumen">
                </div>
                <div class="form-group">
                    <label for="nombre">Autor</label>
                    <input type="text" class="form-control" id="autor" placeholder="autor" name="autor">
                </div>
                <div class="form-group">
                    <label for="nombre">Editorial</label>
                    <input type="text" class="form-control" id="editorial" placeholder="editorial" name="editorial">
                </div>
                <div class="form-group">
                    <label for="nombre">Precio</label>
                    <input type="number" class="form-control" id="precio" placeholder="precio" name="precio">
                </div>
                <div class="form-group">
                    <label for="nombre">Stock</label>
                    <input type="number" class="form-control" id="stock" placeholder="stock" name="stock">
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>

    </div>

